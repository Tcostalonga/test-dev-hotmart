<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sobre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/open_sans_semibold"
        android:text="@string/txt_label_sobre"
        android:textColor="@color/topaz"
        android:textSize="@dimen/font_16" />


    <TextView
        android:id="@+id/about_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sobre"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/open_sans_light"
        android:textColor="@color/black_two"
        android:textSize="16sp"
        android:textStyle="normal"
        tools:text="Se você curte um pão fresquinho, ou uma sobremesa caprichada, você precisa incluir uma visitinha a Padaria Pelicano no seu roteiro por BH. A fila é gigantesca, mas os quitutes estão sem dúvida entre os melhores da cidade. " />

    <ImageView
        android:id="@+id/ic_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_details"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/margin_20"
        app:srcCompat="@drawable/ic_time" />


    <TextView
        android:id="@+id/schedules_details"
        style="@style/txt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_details"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/ic_time"
        android:fontFamily="@font/open_sans_light"
        android:textColor="@color/black_two"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="seg a sex: 7h às 23h sáb e dom: 8h às 20h" />


    <ImageView
        android:id="@+id/ic_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_time"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/ic_phone" />

    <TextView
        android:id="@+id/phone_details"
        style="@style/txt_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/schedules_details"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/ic_phone"
        android:fontFamily="@font/open_sans_light"
        android:textColor="@color/black_two"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="+55 31 98892 5338" />

    <ImageView
        android:id="@+id/ic_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_phone"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin_20"
        app:srcCompat="@drawable/ic_pin" />

    <TextView
        android:id="@+id/address_details"
        style="@style/txt_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_details"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/ic_pin"
        android:fontFamily="@font/open_sans_light"
        android:textColor="@color/black_two"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="Rua do ouro, 297 - Serra Belo Horizonte - MG" />

</RelativeLayout>