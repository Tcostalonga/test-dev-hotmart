<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/img_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/padaria" />


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/topaz"
                    app:cardCornerRadius="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_details">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_16">

                        <TextView
                            android:id="@+id/name_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/open_sans_light"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/font_32"
                            tools:text="Padaria Pelicano" />

                        <ImageView
                            android:id="@+id/star1_details"
                            style="@style/starStyle_relative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            app:srcCompat="@drawable/ic_s_off" />

                        <ImageView
                            android:id="@+id/star2_details"
                            style="@style/starStyle_relative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/star1_details"
                            app:srcCompat="@drawable/ic_s_off" />

                        <ImageView
                            android:id="@+id/star3_details"
                            style="@style/starStyle_relative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/star2_details"
                            app:srcCompat="@drawable/ic_s_off" />

                        <ImageView
                            android:id="@+id/star4_details"
                            style="@style/starStyle_relative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/star3_details"
                            app:srcCompat="@drawable/ic_s_off" />

                        <ImageView
                            android:id="@+id/star5_details"
                            style="@style/starStyle_relative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/star4_details"
                            app:srcCompat="@drawable/ic_s_off" />

                        <TextView
                            android:id="@+id/review_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/name_details"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/margin_8"
                            android:layout_marginBottom="5dp"
                            android:layout_toEndOf="@id/star5_details"
                            android:fontFamily="@font/open_sans"
                            android:gravity="end"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/font_14"
                            tools:text="2.9" />
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/fotos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_20"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/txt_label_fotos"
                    android:textColor="@color/topaz"
                    android:textSize="@dimen/font_16"
                    app:layout_constraintBottom_toTopOf="@id/linear_layout_rcview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_details" />

                <LinearLayout
                    android:id="@+id/linear_layout_rcview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginTop="@dimen/font_16"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fotos">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcview_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linear_layout_rcview">

                    <TextView
                        android:id="@+id/sobre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="@dimen/margin_16"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/txt_label_sobre"
                        android:textColor="@color/topaz"
                        android:textSize="@dimen/font_16" />


                    <TextView
                        android:id="@+id/about_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sobre"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="@dimen/margin_20"
                        android:fontFamily="@font/open_sans_light"
                        android:textColor="@color/black_two"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        tools:text="Se você curte um pão fresquinho, ou uma sobremesa caprichada, você precisa incluir uma visitinha a Padaria Pelicano no seu roteiro por BH. A fila é gigantesca, mas os quitutes estão sem dúvida entre os melhores da cidade. " />

                    <ImageView
                        android:id="@+id/ic_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/about_details"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="@dimen/margin_20"
                        app:srcCompat="@drawable/ic_time" />


                    <TextView
                        android:id="@+id/schedules_details"
                        style="@style/txt_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/about_details"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/ic_time"
                        android:fontFamily="@font/open_sans_light"
                        android:textColor="@color/black_two"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:text="@string/txt_label_schedule" />


                    <ImageView
                        android:id="@+id/ic_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ic_time"
                        android:layout_alignParentStart="true"
                        app:srcCompat="@drawable/ic_phone" />

                    <TextView
                        android:id="@+id/phone_details"
                        style="@style/txt_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/schedules_details"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/ic_phone"
                        android:fontFamily="@font/open_sans_light"
                        android:textColor="@color/black_two"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        tools:text="+55 31 98892 5338" />

                    <ImageView
                        android:id="@+id/ic_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ic_phone"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="@dimen/margin_20"
                        app:srcCompat="@drawable/ic_pin" />

                    <TextView
                        android:id="@+id/address_details"
                        style="@style/txt_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phone_details"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/ic_pin"
                        android:fontFamily="@font/open_sans_light"
                        android:textColor="@color/black_two"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        tools:text="Rua do ouro, 297 - Serra Belo Horizonte - MG" />

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <ImageView
            android:id="@+id/share_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="@dimen/margin_16"
            app:srcCompat="@drawable/ic_share" />

        <ImageView
            android:id="@+id/back_arrow_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_margin="@dimen/margin_16"
            app:srcCompat="@drawable/ic_arrow_back" />


        <ProgressBar
            android:id="@+id/pg_bar_details"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible" />


        <TextView
            android:id="@+id/txt_error_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/open_sans_light"
            android:textAlignment="center"
            android:textSize="@dimen/font_20"
            android:visibility="gone"
            tools:text="Verifique sua conexão" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>