<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/img_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@drawable/padaria" />


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/topaz"
                    app:cardCornerRadius="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img_place">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_16">

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:fontFamily="@font/open_sans_light"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/font_32"
                            tools:text="Padaria Pelicano" />

                        <ImageView
                            android:id="@+id/star1"

                            style="@style/starStyle_relative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            app:srcCompat="@drawable/ic_s_off" />

                        <ImageView
                            android:id="@+id/star2"
                            style="@style/starStyle_relative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/star1"
                            app:srcCompat="@drawable/ic_s_off" />

                        <ImageView
                            android:id="@+id/star3"
                            style="@style/starStyle_relative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/star2"
                            app:srcCompat="@drawable/ic_s_off" />

                        <ImageView
                            android:id="@+id/star4"
                            style="@style/starStyle_relative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/star3"
                            app:srcCompat="@drawable/ic_s_off" />

                        <ImageView
                            android:id="@+id/star5"
                            style="@style/starStyle_relative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/star4"
                            app:srcCompat="@drawable/ic_s_off" />

                        <TextView
                            android:id="@+id/review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/type"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/margin_8"
                            android:layout_marginBottom="5dp"
                            android:layout_toEndOf="@id/star5"
                            android:fontFamily="@font/open_sans"
                            android:gravity="end"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/font_14"
                            tools:text="2.9" />
                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:id="@+id/fotos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/txt_label_fotos"
                    android:textColor="@color/topaz"
                    android:textSize="@dimen/font_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_details" />


                <LinearLayout
                    android:id="@+id/linear_layout_rcview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fotos">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcview_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:id="@+id/sobre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/txt_label_sobre"
                    android:textColor="@color/topaz"
                    android:textSize="@dimen/font_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linear_layout_rcview" />

                <TextView
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_light"
                    android:textColor="@color/black_two"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sobre"
                    tools:text="Se você curte um pão fresquinho, ou uma sobremesa caprichada, você precisa incluir uma visitinha a Padaria Pelicano no seu roteiro por BH. A fila é gigantesca, mas os quitutes estão sem dúvida entre os melhores da cidade. " />


                <ImageView
                    android:id="@+id/ic_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/schedules"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/schedules"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:srcCompat="@drawable/ic_time" />

                <TextView
                    android:id="@+id/schedules"
                    style="@style/txt_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_light"
                    android:textColor="@color/black_two"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toTopOf="@+id/phone"
                    app:layout_constraintStart_toEndOf="@+id/ic_time"
                    app:layout_constraintTop_toBottomOf="@+id/about"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="seg a sex: 7h às 23h sáb e dom: 8h às 20h" />


                <ImageView
                    android:id="@+id/ic_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/ic_pin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ic_time"
                    app:layout_constraintEnd_toStartOf="@id/phone"
                    app:srcCompat="@drawable/ic_phone" />

                <TextView
                    android:id="@+id/phone"
                    style="@style/txt_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_light"
                    android:textColor="@color/black_two"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toTopOf="@+id/address"
                    app:layout_constraintStart_toEndOf="@+id/ic_phone"
                    app:layout_constraintTop_toBottomOf="@+id/schedules"
                    tools:text="+55 31 98892 5338" />


                <ImageView
                    android:id="@+id/ic_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/address"
                    app:layout_constraintEnd_toStartOf="@id/address"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/ic_pin" />

                <TextView
                    android:id="@+id/address"
                    style="@style/txt_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_light"
                    android:textColor="@color/black_two"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ic_pin"
                    app:layout_constraintTop_toBottomOf="@+id/phone"
                    tools:text="Rua do ouro, 297 - Serra Belo Horizonte - MG" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="@dimen/margin_16"
            app:srcCompat="@drawable/ic_share" />

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_margin="@dimen/margin_16"
            app:srcCompat="@drawable/ic_arrow_back" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>